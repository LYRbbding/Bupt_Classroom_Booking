/* miniprogram/pages/Me/MyGroups/AddGroup/Me_groups_add.wxss */
@import '../../../../style/dark_mode.wxss';

Page {
  --color-name: #191919;
  --color-rev: 0%;
}

@media (prefers-color-scheme: light) {
  Page {
    --color-name: #191919;
    --color-rev: 0%;
  }
}

@media (prefers-color-scheme: dark) {
  Page {
    --color-name: #EEEEEE;
    --color-rev: 100%;
  }
}

.title {
  font-weight: 700;
  font-size: 1.25em;
  color: var(--color-name);
  word-break: break-all;
}

.footer {
  color: #ffffff;
  border-radius: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 7.5px;
  padding-right: 7.5px;
  background-color: #bbbbbb;
}

.group-image {
  border-radius: 10px;
  margin-right: 16px;
  vertical-align: middle;
  width: 80px;
  height: 80px;
  display: inline-block;
  overflow: hidden;
  text-overflow: clip;
  white-space: nowrap;
  font-size: 53px;
  font-weight: 500;
  color: #ecf0f1;
  text-align: center;
}

.default-image {
  filter: invert(calc(var(--color-rev)));
}

#button {
  position: fixed;
  bottom: 5%;
  z-index: 11;
  left: 0px;
  right: 0px;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

#footer-img {
  position: fixed;
  width: 100%;
  height: 100px;
  bottom: 0%;
  z-index: 10;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.footer-img-light {
  background: linear-gradient(to top, #f6f6f6, rgba(246, 246, 246, 1), rgba(246, 246, 246, 0.8), rgba(246, 246, 246, 0));
}

.footer-img-dark {
  background: linear-gradient(to top, #282828, rgba(40, 40, 40, 1), rgba(40, 40, 40, 0.8), rgba(40, 40, 40, 0));
}