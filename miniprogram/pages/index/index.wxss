/* Todos Start */
.todos-show {
  position: relative;
  top: 0px;
  transition: top 1s ease;
}

.todos-hide {
  position: relative;
  top: -172px;
  transition: top 1s ease;
}

.cards-show {
  opacity: 1;
  transition: opacity 1.5s ease;
}

.cards-hide {
  opacity: 0;
  transition: opacity 1.5s ease;
}

.scroll-card {
  background: transparent;
  border-radius: 20px;
  overflow: hidden;
  transition: height 0.5s ease;
}

.invitation-title {
  font-weight: 700;
  font-size: 20px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.invitation-tips {
  font-size: 14px;
  margin: 16px;
}

.no-inv {
  font-size: 16px;
  margin: 16px;
  text-align: center;
  color: var(--weui-FG-2);
}

.desc {
  display: -webkit-box;
  margin-left: 16px;
  margin-right: 16px;
  font-size: 15px;
  width: calc(375rpx-64px);
  color: var(--weui-FG-1);
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}

.group-image {
  border-radius: 10px;
  margin-right: 16px;
  vertical-align: middle;
  width: 48px;
  height: 48px;
  line-height: 48px;
  display: inline-block;
  overflow: hidden;
  text-overflow: clip;
  white-space: nowrap;
  font-size: 28px;
  font-weight: 500;
  color: #ecf0f1;
  text-align: center;
}

.inv-loading {
  display: inline;
  transform: scale(2);
  margin-left: 20px;
}

.inv-btn {
  display: inline-block;
  border-radius: 25px;
  padding: 10px;
  margin-left: 14px;
  margin-right: 16px;
}

.inv-accept {
  background: #07C160;
}

.inv-acc-hov {
  background: #06AD56;
}

.inv-refuse {
  background: #FA5151;
}

.inv-ref-hov {
  background: #E64747;
}

.fab-btn {
  position: fixed;
  border-radius: 30px;
  padding: 15px;
  right: 20px;
  bottom: 84px;
  bottom: calc(84px + constant(safe-area-inset-bottom));
  bottom: calc(84px + env(safe-area-inset-bottom));
}

.todos-title {
  z-index: 1000;
  width: 100%;
  background-color: var(--weui-BG-2);
  color: var(--weui-FG-0);
  font-weight: 70px;
  height: 40px;
  font-size: medium;
  line-height: 36px;
  display: flex;
  text-indent: 10px;
  text-align: left;
  border-top: medium solid var(--weui-FG-3);
}

.arrow-hide {
  transform: rotate(0deg);
  transition: transform 0.3s;
  transform-origin: 75% 50%;
}

.arrow-show {
  transform: rotate(90deg);
  transition: transform 0.3s;
  transform-origin: 75% 50%;
}

.todos-box {
  overflow: hidden;
  transition: max-height 0.5s ease-out;
}

.todos-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.todos-content {
  flex-grow: 1;
  line-height: 30px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.todos-count {
  color: var(--weui-FG-1);
}

.todos-content-title {
  font-weight: 700;
}

.todos-no {
  color: var(--weui-FG-1);
  text-align: center;
  line-height: 100px;
  transition: height .3s ease;
  overflow: hidden;
}

/* Todos End */

/* Query Start */
.accept {
  color: #07C160;
}

.reject {
  color: #FA5151;
}

.button-hover[type='warning'] {
  color: #fff;
  background-color: #E64747;
}

button[type='warning'] {
  color: #fff;
  background-color: #fa5151;
}

button[disabled][type='warning'] {
  color: var(--color-btnfg);
  background-color: var(--color-btnbg);
}

.fun-btn {
  display: flex;
  flex-basis: 45%;
  flex-grow: 0;
  flex-shrink: 0;
  width: 45%;
  min-width: 45%;
}

/* Query End */

/* Me Start */
.footer {
  color: #fff;
  border-radius: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 7.5px;
  padding-right: 7.5px;
  background-color: #bbb;
}

.name {
  font-weight: 900;
  font-size: 1.25em;
  color: var(--color-name);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.blank {
  color: rgba(255, 255, 255, 0);
  font-size: 0.6em;
}

.description {
  font-size: 0.8em;
  color: #7F7F7F;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.my-grids {
  background-color: var(--weui-BG-2);
}

.grid-title {
  font-size: 20px;
}

/* Me End */